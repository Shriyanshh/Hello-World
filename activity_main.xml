<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/green"
    android:id="@+id/parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/text"
        android:layout_height="wrap_content"
        android:text="Hello from Shri!"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:textColor="@color/black"
        android:textSize="40sp" />
    
    <TextView
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:background="#1DBCEE"
        android:text="Click to change text color!"
        android:textColor="@color/black"
        android:padding="10dp"
        android:layout_alignParentBottom="true"
        android:textSize="30sp" />

    <TextView
        android:layout_centerHorizontal="true"
        android:layout_above="@id/button"
        android:background="#1DBCEE"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:id="@+id/ChangeBackgroundButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Click to change background color"
        android:layout_margin="20dp" />

    <TextView
        android:layout_centerHorizontal="true"
        android:layout_above="@id/ChangeBackgroundButton"
        android:background="#1DBCEE"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:id="@+id/ChangeTextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Click to change text"
        android:layout_margin="20dp" />

    <EditText
        android:layout_above="@id/ChangeTextButton"
        android:layout_centerHorizontal="true"
        android:id="@+id/editText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:text="Create your own text" />

    <TextView
        android:id="@+id/ChangecustomTextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/editText"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="21dp"
        android:background="#1DBCEE"
        android:padding="10dp"
        android:text="Click to change to custom text"
        android:textColor="@color/black"
        android:textSize="25sp" />
</RelativeLayout>
